    "format": "prettier -w .",
    "formatcheck": "prettier -c .",
    "lint": "eslint .",
    "sort": "sort-package-json",
    "test": "echo \"@pkg-tools/config does not require test\"; exit 0;",
    "typecheck": "tsc --noEmit",
    "‚òùÔ∏è required package scripts": "",
