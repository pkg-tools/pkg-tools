{
  "name": "@pkg-tools/lint",
  "version": "0.2.0",
  "private": false,
  "description": "A utility/tool for linting packages",
  "homepage": "https://github.com/pkg-tools/pkg-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/pkg-tools/pkg-tools.git",
    "directory": "packages/@pkg-tools/linting"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./config": {
      "import": {
        "types": "./dist/config.d.mts",
        "default": "./dist/config.mjs"
      },
      "require": {
        "types": "./dist/config.d.cts",
        "default": "./dist/config.cjs"
      }
    },
    "./cli": {
      "import": {
        "default": "./dist/cli.mjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": "./cli.js",
  "files": [
    "cli.js",
    "dist"
  ],
  "scripts": {
    "üëárequired package scripts": "",
    "build": "unbuild",
    "clean": "shx rm -rf ./dist",
    "dev": "unbuild --stub",
    "format": "prettier --w .",
    "formatcheck": "prettier -c .",
    "lint": "eslint .",
    "sort": "sort-package-json",
    "test": "echo \"@pkg-tools/lint does not require test\"; exit 0;",
    "typecheck": "tsc --noEmit",
    "‚òùÔ∏è required package scripts": "",
    "prepublishOnly": "pnpm -w exec turbo run build --filter=\"@pkg-tools/lint\""
  },
  "dependencies": {
    "@pkg-tools/utilities": "workspace:*",
    "defu": "6.1.3",
    "citty": "0.1.5",
    "consola": "3.2.3",
    "eslint": "8.56.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "globby": "14.0.0"
  },
  "devDependencies": {
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "prettier": "3.1.1",
    "publint": "^0.2.7",
    "shx": "0.3.4",
    "sort-package-json": "^2.6.0",
    "typescript": "5.3.3",
    "unbuild": "2.0.0"
  }
}
